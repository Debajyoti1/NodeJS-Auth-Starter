<div class="row mt-5">
    <div class="col-md-6 m-auto" style="max-width: 500px;">
        <div class="card card-body">
            <h1 class="mb-3 text-center">
                <img src="/images/login-icon.png" alt="icon" width="20%" />
            </h1>
            <h2>
                Reset Password
            </h2>
            <%- include('./messages.ejs') %>
            <form action="/auth/reset/<%= id %>"  method="POST">
                <div class="form-group mb-2">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
                      value="<%= typeof password != 'undefined' ? password : '' %>" />
                  </div>
                  <div class="form-group mb-2">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
                      value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                  </div>
                <button type="submit" class="btn btn-primary btn-block mb-2">Reset Password</button>
            </form>
            <p class="mt-4">
                Remember your password? <a href="/auth/login">Login</a>
            </p>
        </div>
    </div>
</div>